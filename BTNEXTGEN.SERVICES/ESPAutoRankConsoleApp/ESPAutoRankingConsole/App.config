<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="elmah">
      <section name="security" requirePermission="false" type="Elmah.SecuritySectionHandler, Elmah" />
      <section name="errorLog" requirePermission="false" type="Elmah.ErrorLogSectionHandler, Elmah" />
      <section name="errorMail" requirePermission="false" type="Elmah.ErrorMailSectionHandler, Elmah" />
      <section name="errorFilter" requirePermission="false" type="Elmah.ErrorFilterSectionHandler, Elmah" />
    </sectionGroup>
    
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net, Version=1.2.11.0, Culture=neutral, PublicKeyToken=669e0ddf0bb1aa2a" />
  
  </configSections>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <connectionStrings>
    <add name="ExceptionLogging" connectionString="Data Source=(local);Initial Catalog=ExceptionLogging;Integrated Security=SSPI;Persist Security Info=False;Connect Timeout=300" providerName="System.Data.SqlClient" />
    <add name="Orders" connectionString="Password=Password1;Persist Security Info=True;User ID=phuc;Initial Catalog=Orders;Data Source=BTDevSQL05\RepositoryLD1;Connect Timeout=3000" />
  </connectionStrings>
  
  <appSettings>
    <add key="Orders_ConnectionString" value="Password=Password1;Persist Security Info=True;User ID=phuc;Initial Catalog=Orders;Data Source=BTDevSQL05\RepositoryLD1;Connect Timeout=3000" />

    <add key="ESPBaseURI" value="http://esp.test.collectionhq.co.uk/esp/" />
    <add key="ESPVendorKey" value="VFMzNjBERVYxOlRTMzYwREVWMQ==" />
    <add key="ESPVersion" value="4.2" />

    <!--
      - JobId (or ThreadId) to pass to procESPGetAutoRankRequests.
      - Value is unique for each task setup in Task Scheduler.
    -->
    <add key="JobId" value="01" />
    <add key="MaxBasketCount" value="20" />
    
  </appSettings>

  <elmah>
    <security allowRemoteAccess="0" />
    <errorLog type="Elmah.SqlErrorLog, Elmah"  connectionStringName="ExceptionLogging" />
    <!--<errorLog type="BT.TS360.Common.Logger.ELMAHLogger.ELMAHMongoLogger, BT.TS360.Common, Version=1.0.0.0, Culture=neutral" connectionStringName="MongoDBConnStr" maxSize="10485760" maxDocuments="10000" />-->
  </elmah>
  
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\JobId_01\ESPAutoRankingTraceJobId_01.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="50" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
  
</configuration>